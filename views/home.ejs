<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>LodgeEasy</title>
  <!-- <link rel="stylesheet" href="home.css" /> -->
  <!-- <link href="output.css" rel="stylesheet"/> -->
  <link rel="stylesheet" href="/output.css" />
</head>

<body class="bg-gray-50 min-h-screen">
  <%- include('partials/nav')%>
  <!-- Header Section -->
   <div class="max-w-4xl mx-auto px-6 py-12 flex items-center">
  <!-- Left: Logo -->
  <div class="w-40 flex-shrink-0">
    <img src="../uploads/LodgeEasy.png" alt="LodgeEasy" class="w-full h-auto">
  </div>

  <!-- Right: Headings -->
  <div class="flex-1 text-center">
    <h1 class="text-4xl font-bold text-gray-800">
      Welcome to LodgeEasy
    </h1>
    <h2 class="text-lg text-gray-600 mt-2">
      <!-- A platform providing seamless lodging facilities -->
       Your hassle-free lodging companion
    </h2>
  </div>
</div>    

  <!-- Registered Homes Section -->
    <div class="max-w-6xl mx-auto px-4 py-10">
      <h2 class="text-xl text-gray-600 mb-8">Here are our registered homes</h2>

      <div id="workarea">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
          <% registeredHomes.forEach(home=> { %>
            <div
              class="bg-white rounded-xl shadow-lg overflow-hidden flex flex-col hover:shadow-2xl transition-shadow duration-300">
              <img src="<%= home.imageURL %>" alt="<%= home.name %>" class="h-48 w-full object-cover" />
              <div class="p-5 flex-1 flex flex-col">
                <h3 class="text-lg font-semibold text-gray-800 mb-1">
                  <%= home.name %>
                </h3>
                <p class="text-sm text-gray-500 mb-2">
                  <%= home.city %>
                </p>
                <!-- <p class="text-base text-gray-700 mb-4 flex-1"><%= home.description %></p> -->
                <div class="flex items-center justify-between mb-4">
                  <span class="text-indigo-600 font-bold text-lg">â‚¹<%= home.price %></span>
                </div>

                <div class="flex gap-2">

                  <a class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg font-medium transition"
                    href="/bookings/<%= home._id %>">Book</a>

                  <a href="/homes/<%= home._id %> "
                    class="flex-1  bg-indigo-600 hover:bg-indigo-700 text-white  py-2 rounded-lg font-medium transition">Details</a>

                  <%- include('partials/fav', { home: home }) %>

                    <!--                 
                  <button type="submit"  onclick="home-list" class="flex items-center justify-center bg-gray-100 hover:bg-pink-100 text-pink-500 py-2 px-4 rounded-lg transition" title="Add to favourites"></button>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20"></svg>
                      <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"/>
                    </svg> -->
                    </button>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>

    <%- include('partials/footer')%>
</body>

</html>